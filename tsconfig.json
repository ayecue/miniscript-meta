{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es2016"],                     
      "allowJs": true,
      "outDir": "dist",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declaration": true,
      "downlevelIteration": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}